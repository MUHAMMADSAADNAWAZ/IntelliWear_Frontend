{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl":"./src",
    "paths":{
      "@api/*":["api/*"],
      "@components/*":["components/*"],
      "@Data/*":["Data/*"],
      "@routes/*":["routes/*"],
      "@utils/*":["shared/utils/*"],
      "@type/*":["types/*"],
      "@pages/*":["pages/*"],
      "@assets/*":["assets/*"],
      "@features/*":["features/*"],
      "@Entities/*":["Entities/*"],
      "@dto/*":["dto/*"],
      "@redux/*":["redux/*"],
      "@public/*": ["../public/*"],
      "@svg": ["svg"]
    },
  },
  "include": ["src"],
 
}
